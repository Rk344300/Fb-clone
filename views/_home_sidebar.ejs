<section id="user-friends" >
       
    
    <% if(locals.user){ %>
        <div class="my-profile">
            <h6>My Profile</h6>
            <% for(u of all_users){%>
              
                    <% if(locals.user.id === u.id && u.usertype !== "Organization" ) { %>
                       
       
                        <a href="/users/profile/<%= u.id %>"><%= u.name %> | My Profile</a>
           
                <% } } %>
        </div>
        <hr>
        <div class="my-friends">
            <h6>My Friends</h6>
            <% for(u of all_users){%>
              
                    <% if(locals.user.id !== u.id && u.usertype !== "Organization" && frndList.includes(u.id)) { %>
                        <div class="d-flex align-items-center side-bar-list justify-content-space-between ml-2">
                            <div class="p-2">
                                <%if (u.avatar) { %>
                                    <img src="<%= u.avatar %>" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                                   <% } else { %>
                
                                    <img src="https://media.istockphoto.com/id/1028085402/vector/avatar-icon-avatar-flat-symbol-isolated-on-white.jpg?b=1&s=170667a&w=0&k=20&c=KSN_6rGcvAHntIxjn6P-KBHP53PVVhITFrwFaX75Gng=" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                
                                    <% } %>
                       </div>
                       <div>
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                        |
                       <a href="/users/profile/friends/remove-friend/<%= u.id %>"> Remove Friend </a>
               
                       <i class="fa fa-comments <%= u.email %> <%= u.id %>"></i>
          
                       </div>
                    </div>
                <% }
             } %>
        </div>
        <hr>

        <div class="my-received">
            <h6>Friend Requests</h6>
            <% for(u of all_users){%>
              
                    <% if(locals.user.id !== u.id && u.usertype !== "Organization" && receiveList.includes(u.id)) { %>
                       
                        <div class="d-flex align-items-center side-bar-list justify-content-space-between ml-2">
                            <div class="p-2">
                                <%if (u.avatar) { %>
                                    <img src="<%= u.avatar %>" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                                   <% } else { %>
                
                                    <img src="https://media.istockphoto.com/id/1028085402/vector/avatar-icon-avatar-flat-symbol-isolated-on-white.jpg?b=1&s=170667a&w=0&k=20&c=KSN_6rGcvAHntIxjn6P-KBHP53PVVhITFrwFaX75Gng=" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                
                                    <% } %>
                       </div>
                       <div>
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                        |
                        <a href="/users/profile/friends/accept-request/<%= u.id %>"> Accept Request </a>
                
                    </div>
                </div>
           
                <% }
             } %>
        </div>
        <hr>

        <div class="other-users">
            <h6>Other Users</h6>
            <% for(u of all_users){%>
                <% if (locals.user.id != u.id && u.usertype !== "Organization" ) {%> 
    
         <%  if( sendList.includes(u.id)){ %>
            <div class="d-flex align-items-center side-bar-list justify-content-space-between ">
                <div class="p-2">
                
                    <%if (u.avatar) { %>
                        <img src="<%= u.avatar %>" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                       <% } else { %>
    
                        <img src="https://media.istockphoto.com/id/1028085402/vector/avatar-icon-avatar-flat-symbol-isolated-on-white.jpg?b=1&s=170667a&w=0&k=20&c=KSN_6rGcvAHntIxjn6P-KBHP53PVVhITFrwFaX75Gng=" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
    
                        <% } %>
           </div>
           <div>        
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        |
            <a href="/users/profile/friends/cancel-request/<%= u.id %>"> Cancel Request </a>
        </div>
    </div>


    <% } else if(!sendList.includes(u.id) && !receiveList.includes(u.id) && !frndList.includes(u.id)) {%>
        <div class="d-flex align-items-center side-bar-list justify-content-space-between ml-2">
            <div class="p-2">
                <%if (u.avatar) { %>
        <img src="<%= u.avatar %>" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
       <% } else { %>
        <img src="https://media.istockphoto.com/id/1028085402/vector/avatar-icon-avatar-flat-symbol-isolated-on-white.jpg?b=1&s=170667a&w=0&k=20&c=KSN_6rGcvAHntIxjn6P-KBHP53PVVhITFrwFaX75Gng=" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
        <% } %>
       </div>
       <div>
            
        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
      |
    <a href="/users/profile/friends/send-request/<%= u.id %>">Add Friend</a>
</div>
</div>


    <% } } }%> 
</div>
<hr>
<div class="Organization">
    <h6>Organization</h6>
    <% for(u of all_users){%>
      
            <% if(locals.user.id !== u.id && u.usertype == "Organization" ) { %>
                <div class="d-flex align-items-center side-bar-list justify-content-space-between ml-2">
                    <div class="p-2">
                        <%if (u.avatar) { %>
                            <img src="<%= u.avatar %>" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
                           <% } else { %>
        
                            <img src="https://media.istockphoto.com/id/1028085402/vector/avatar-icon-avatar-flat-symbol-isolated-on-white.jpg?b=1&s=170667a&w=0&k=20&c=KSN_6rGcvAHntIxjn6P-KBHP53PVVhITFrwFaX75Gng=" class="rounded-circle me-2" alt="avatar" style="width: 48px; height: 48px; object-fit: cover">
        
                            <% } %>
               </div>
               <div>
                <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                |
              
  
               </div>
            </div>
        <% }
     } %>
</div>
<hr>


      <%} %>  
</section>